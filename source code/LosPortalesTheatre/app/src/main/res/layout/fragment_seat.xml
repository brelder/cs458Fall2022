<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeatFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/seatPlayImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ImageView>
    <include layout="@layout/play_details"
        android:layout_width="match_parent"
        android:id="@+id/playCardLayout"
        android:layout_below="@+id/seatPlayImage"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/textview_playTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/playCardLayout"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Select Seats:"
        android:textColor="@color/navyBlue"
        android:textSize="25sp"
        android:textStyle="bold" />

    <include layout="@layout/seating_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/textview_playTitle"/>

</RelativeLayout>
</ScrollView>