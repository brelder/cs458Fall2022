<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeatFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/seatPlayImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ImageView>
    <include layout="@layout/play_details"
        android:layout_width="match_parent"
        android:id="@+id/playCardLayout"
        android:layout_below="@+id/seatPlayImage"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />


    <include layout="@layout/seating_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playCardLayout"/>

</RelativeLayout>
</ScrollView>